<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.application.scancode.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.application.scancode.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_readQRCodeFragment"
            app:destination="@id/readQRCodeFragment" />
    </fragment>

    <fragment
        android:id="@+id/readQRCodeFragment"
        android:name="com.application.scancode.ReadQRCodeFragment"
        android:label="fragment_read_qrcode"
        tools:layout="@layout/fragment_read_qrcode" >
        <action
            android:id="@+id/action_readQRCodeFragment_to_conferenceFragment"
            app:destination="@id/conferenceFragment" />
        <action
            android:id="@+id/action_readQRCodeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/conferenceFragment"
        android:name="com.application.scancode.ConferenceFragment"
        android:label="fragment_conference"
        tools:layout="@layout/fragment_conference" >
        <action
            android:id="@+id/action_conferenceFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>